rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Shop logos - authenticated users can upload to their shop folder
    match /shops/{shopId}/{allPaths=**} {
      // Anyone can read (logos are public)
      allow read: if true;
      // Only authenticated users can write
      allow write: if request.auth != null;
    }
  }
}
